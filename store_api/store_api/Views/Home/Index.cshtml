

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@model IEnumerable<store_api.Models.Product>

@if (TempData["SuccessMessage"] != null)
    {
        // Lấy thông điệp từ TempData
        ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    }
<div class="tab-content">
    <div id="tab-1" class="tab-pane fade show p-0 active">
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">

                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div class="rounded position-relative fruite-item">

                                <div class="fruite-img">
                                    <img src="~/Content/img_giay/@item.Product_image.productimage_url" class="img-fluid w-100 rounded-top" alt="">
                                </div>
                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                    <h4>@item.product_name</h4>
                                    <p>@item.description</p>
                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                        <p class="text-dark fs-5 fw-bold mb-0">@item.price</p>
                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>
