
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List< WebApiProject.Models.Product>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Sản phẩm</h1>
                </div>
                <!-- Phân loại Sản phẩm -->
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">Tất cả</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Sân cỏ nhân tạo</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Sân đá futsal</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-4">
                                <span class="text-dark" style="width: 130px;">Sân cỏ tự nhiên</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4 equal-height">
                       
                           @foreach (var item in Model)
                           {
                                <div class="col-md-6 col-lg-4 col-xl-3 equal-height">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                            <a href="@Url.Action("ProductDetail", "product", new { id_product = item.product_id })">
                                                <img src="~/Content/@item.Product_image.productimage_url" class="img-fluid w-100 rounded-top" alt="">
                                            </a>
                                        </div>
                                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                            <h5>@item.product_name</h5>
                                            <p>@item.description</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">@item.price</p>
                                                <a href="@Url.Action("ProductDetail", "product", new { id_product = item.product_id})" class="btn border border-secondary rounded-pill px-3 text-primary" data-id="@item.product_id">
                                                    <i class="fa fa-shopping-bag me-2 text-primary"></i> Mua
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                           }
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>

