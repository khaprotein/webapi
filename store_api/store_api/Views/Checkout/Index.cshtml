@model IEnumerable<store_api.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>List of Orders</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng hoá đơn</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.orders_id</td>
                    <td>@order.orders_date</td>
                    <td>@order.total_amount</td>
                    <td>@order.oderStatusCheck.status</td>
                    <td>
                        <a href="@Url.Action("OrderDetails", "Orders", new { orderId = order.orders_id})">Xem đơn hàng</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
